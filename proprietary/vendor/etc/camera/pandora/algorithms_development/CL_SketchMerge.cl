__kernel void SketchMerge(
    __global float *pGray,
    __global float *pInvGray,
    __global unsigned char *pOutputYuv)
{
    int j = get_global_id(0); //width
    int i = get_global_id(1); //height
    int width  = get_global_size(0);
    int height = get_global_size(1);
    int index = i * width + j;
    float weight = -0.5f; // improve performance

    float a = pGray[index] * pInvGray[index];
    float f = a * 0.8f;
    float b = 255.0f - pInvGray[index];
    float c = f / b;
    float d = pGray[index] + c;
    d = (d < 0) ? 0 : (d > 255) ? 255 : d;
    pGray[index] =
        d * (1 - weight) + (float)(gSketchOutputLut[(int)(d + 0.5f)]) * weight;

    pOutputYuv[index] = (unsigned char)pGray[index];

}

